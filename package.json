{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "Самостоятельный проект веб-чата",
  "main": "src/index.ts",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-config-xo": "^0.37.0",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.17",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "sass": "^1.32.8",
    "stylelint": "^13.13.1",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "start": "npm run clear && parcel build ./static/*.html --no-source-maps --no-cache --public-url ./ && node ./server.js",
    "dev": "npm run clear && parcel ./static/*.html --port 3000",
    "build": "npm run clear && parcel build ./static/*.html --no-source-maps --no-cache --public-url ./",
    "clear": "rm -rf dist .cache",
    "lint": "slint --fix --ext .ts, --ignore-path .gitignore . && stylelint \"**/*.scss\"  --config .stylelintrc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KirillGrom/middle.messenger.praktikum.yandex.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KirillGrom/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/KirillGrom/middle.messenger.praktikum.yandex#readme",
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "customDistStructure": {
    "config": {
      ".css": "css",
      ".js": "js"
    },
    "options": {
      "development": true
    }
  },
  "dependencies": {
    "stylelint-config-standard": "^22.0.0"
  }
}
