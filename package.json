{
  "name": "messenger",
  "version": "1.0.0",
  "browserslist": [
    "last 1 Chrome version"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/register": "^7.14.5",
    "@types/chai": "^4.2.20",
    "@types/mocha": "^8.2.3",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "@webpack-cli/generators": "^2.2.0",
    "chai": "^4.3.4",
    "chai-dom": "^1.9.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.1.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.29.0",
    "eslint-config-xo": "^0.37.0",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "html-webpack-plugin": "^5.3.2",
    "jsdom": "^16.6.0",
    "mini-css-extract-plugin": "^2.1.0",
    "miragejs": "^0.1.41",
    "mocha": "^9.0.2",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.17",
    "parcel-plugin-static-files-copy": "^2.6.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.1.0",
    "stylelint": "^13.13.1",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "start": "npm run clear && build && node ./server.js",
    "dev": "webpack  --mode=development --progress  && webpack serve",
    "build": "webpack --mode=production --node-env=production",
    "clear": "rm -rf dist .cache",
    "lint": "eslint --fix --ext .ts, --ignore-path .gitignore . && stylelint \"**/*.scss\" --fix  --config .stylelintrc.json",
    "test": "mocha",
    "watch": "webpack --watch",
    "precommit:hook": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KirillGrom/middle.messenger.praktikum.yandex.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KirillGrom/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/KirillGrom/middle.messenger.praktikum.yandex#readme",
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  },
  "customDistStructure": {
    "config": {
      ".css": "css",
      ".js": "js"
    },
    "options": {
      "development": true
    }
  },
  "dependencies": {
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "cross-env": "^7.0.3",
    "stylelint-config-standard": "^22.0.0"
  },

  "precommit": "precommit:hook"
}
